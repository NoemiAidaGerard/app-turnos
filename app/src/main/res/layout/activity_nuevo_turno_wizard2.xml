<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.example.emiliano.appturnos.NuevoTurnoWizard2Activity">

    <TextView
        android:id="@+id/w2TxtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/w_nuevo_turno_tit"
        android:textSize="32dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/w2TxtSubTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/w2TxtTitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Paso 2: SelecciÃ³n de una especialidad medica"
        android:textColor="@color/colorForest"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/w2TxtDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/w2TxtSubTitulo"
        android:layout_marginTop="15dp"
        android:text="@string/w1_txt_desc"
        android:textSize="20dp"
        android:visibility="gone" />


    <TextView
        android:id="@+id/w2Txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/w2TxtDesc"
        android:layout_marginTop="20dp"
        android:text="Obras sociales disponibles:"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="gone" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TableRow android:layout_width="match_parent">

            <Button
                android:id="@+id/w2BtnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@color/colorCoral"
                android:text="@string/txtBtnCancel"
                android:onClick="onW2BtnCancelar"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />


            <Button
                android:id="@+id/w2BtnAnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Anterior"
                android:textColor="@color/colorWhite"
                android:onClick="onW2BtnAntClick"
                android:textSize="20dp" />

            <Button
                android:id="@+id/w2BtnSig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onW2BtnSigClick"
                android:background="@color/colorPrimary"
                android:text="Siguiente"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />


        </TableRow>


    </TableLayout>


</RelativeLayout>
