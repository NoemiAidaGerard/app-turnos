<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.example.emiliano.appturnos.HomeActivity">


    <TextView
        android:id="@+id/homeTxtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Mis Turnos"
        android:textAlignment="center"
        android:textSize="32dp" />

    <ScrollView
        android:id="@+id/misTurnosContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/homeTxtTitulo"
        android:visibility="gone"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/txtMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        android:text="@string/home_no_existen_turnos"
        android:layout_below="@+id/homeTxtTitulo"
        />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnNuevoTurno">

        <TableRow
            android:layout_width="match_parent">

            <Button
                android:id="@+id/btnConsultarInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="MÃ¡s Info"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />


            <Button
                android:id="@+id/btnDarDeBaja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@color/colorCoral"
                android:text="Dar de Baja"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"


                />

        </TableRow>


    </TableLayout>


    <Button
        android:id="@+id/btnNuevoTurno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:text="Nuevo Turno"
        android:textColor="@color/colorWhite"
        android:onClick="onNuevoTurnoClick"
        android:textSize="20dp" />


</RelativeLayout>
