<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_outer_layout"
    tools:context="com.example.emiliano.appturnos.NuevoTurnoWizard4Activity">



    <TextView
        android:id="@+id/w4TxtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/w_nuevo_turno_tit"
        android:textSize="@dimen/txts_titulo"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/w4IndeterminateBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:indeterminateTintMode="src_in"
        android:maxHeight="@dimen/txts_4"
        android:maxWidth="@dimen/txts_4"
        android:visibility="gone"
        android:layout_above="@+id/w4TxtSubTitulo" />

    <TextView
        android:id="@+id/w4TxtSubTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/w4TxtTitulo"
        android:layout_marginTop="30dp"
        android:text="Revise los datos ingresados y a continuaciÃ³n presione 'Finalizar' "
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txts_4"
        android:textStyle="bold" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TableRow android:layout_width="match_parent">

            <Button
                android:id="@+id/w3BtnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@color/colorCoral"
                android:text="@string/txtBtnCancel"
                android:onClick="onW3BtnCancelar"
                android:textColor="@color/colorWhite"
                android:paddingTop="@dimen/padding_btn"
                android:paddingBottom="@dimen/padding_btn"
                android:textSize="@dimen/txts_5" />


            <Button
                android:id="@+id/w3BtnAnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Anterior"
                android:textColor="@color/colorWhite"
                android:paddingTop="@dimen/padding_btn"
                android:paddingBottom="@dimen/padding_btn"
                android:onClick="onW3BtnAntClick"
                android:textSize="@dimen/txts_5" />

            <Button
                android:id="@+id/w3BtnSig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onW3BtnSigClick"
                android:background="@color/colorPrimary"
                android:text="Siguiente"
                android:textColor="@color/colorWhite"
                android:paddingTop="@dimen/padding_btn"
                android:paddingBottom="@dimen/padding_btn"
                android:textSize="@dimen/txts_5" />

        </TableRow>

    </TableLayout>


</RelativeLayout>
