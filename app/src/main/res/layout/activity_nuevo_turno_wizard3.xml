<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_outer_layout"
    tools:context="com.example.emiliano.appturnos.NuevoTurnoWizard3Activity">


    <TextView
        android:id="@+id/w3TxtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/w_nuevo_turno_tit"
        android:textSize="@dimen/txts_titulo"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/w3TxtSubTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/w3TxtTitulo"
        android:layout_marginTop="30dp"
        android:text="Seleccione un médico y un día para la consulta."
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txts_4"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/w3TxtLabelMedicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/w3TxtSubTitulo"
        android:layout_marginTop="20dp"
        android:text="Elija un medico:"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txts_4"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerMedicos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/w3TxtLabelMedicos"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/w3TxtLabelFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerMedicos"
        android:layout_marginTop="10dp"
        android:text="Elija un día:"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txts_4"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/w3TxtFechaTurno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/w3TxtLabelFecha"
        android:layout_marginTop="10dp"
        android:inputType="date" />

    <Button
        android:id="@+id/btnCambiarFechaNac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="w3CambiarFechaTurnoClick"
        android:layout_below="@+id/w3TxtFechaTurno"
        android:textSize="@dimen/txts_5"
        android:text="Cambiar fecha" />


    <TextView
        android:id="@+id/w3TxtDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/w3TxtSubTitulo"
        android:layout_marginTop="15dp"
        android:text="@string/w1_txt_desc"
        android:textSize="@dimen/txts_default"
        android:visibility="gone" />


    <TextView
        android:id="@+id/w3Txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/w3TxtDesc"
        android:layout_marginTop="20dp"
        android:text="Obras sociales disponibles:"
        android:textSize="@dimen/txts_default"
        android:textStyle="bold"
        android:visibility="gone" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TableRow android:layout_width="match_parent">

            <Button
                android:id="@+id/w3BtnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@color/colorCoral"
                android:text="@string/txtBtnCancel"
                android:onClick="onW3BtnCancelar"
                android:textColor="@color/colorWhite"
                android:paddingTop="@dimen/padding_btn"
                android:paddingBottom="@dimen/padding_btn"
                android:textSize="@dimen/txts_5" />


            <Button
                android:id="@+id/w3BtnAnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Anterior"
                android:textColor="@color/colorWhite"
                android:paddingTop="@dimen/padding_btn"
                android:paddingBottom="@dimen/padding_btn"
                android:onClick="onW3BtnAntClick"
                android:textSize="@dimen/txts_5" />

            <Button
                android:id="@+id/w3BtnSig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onW3BtnSigClick"
                android:background="@color/colorPrimary"
                android:text="Siguiente"
                android:enabled="false"
                android:textColor="@color/colorWhite"
                android:paddingTop="@dimen/padding_btn"
                android:paddingBottom="@dimen/padding_btn"
                android:textSize="@dimen/txts_5" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
